<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p>Phone n° <%= @restaurant.phone_number %></p>

<div>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>Rating: <%= review.rating %>, <%= review.content %></li>
    <% end %>
  </ul>
</div>

<%= link_to "Go back", restaurants_path %>
